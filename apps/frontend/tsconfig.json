{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "lib": [
            "esnext"
        ],
        "esModuleInterop": true,
        "strict": true,
        "resolveJsonModule": true,
        "outDir": "dist", // 通常 Wrangler 会处理输出，但明确指定无害
        "rootDir": "src",
        "types": [
            "@cloudflare/workers-types"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "test"
    ]
}